<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true"
    tools:context="savindev.myuniversity.welcomescreen.FirstStartActivity"
    android:id="@+id/welcome_screen">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/background"
        android:layout_below="@+id/view"
        android:layout_alignParentBottom="true" />

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:theme="@style/AppTheme.Common.AppBarOverlay"
        android:id="@+id/view"></android.support.design.widget.AppBarLayout>


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/icon"
        android:layout_gravity="center"
        android:background="@drawable/logo"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_fragment"
        android:layout_below="@+id/icon"
        android:layout_above="@+id/buttonsLayout"
        android:nestedScrollingEnabled="true"
        android:layout_alignLeft="@+id/icon"
        android:layout_alignStart="@+id/icon"
        android:layout_alignRight="@+id/icon"
        android:layout_alignEnd="@+id/icon">


    </FrameLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:id="@+id/buttonsLayout">
        <Button android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Пропустить"
            android:background="#ffffff"
            android:textColor="@color/primary"
            android:id="@+id/btnSkip" />

        <Button android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Войти"
            android:background="#ffffff"
            android:textColor="@color/primary"
            android:id="@+id/btnSignin" />


    </LinearLayout>


</RelativeLayout>
