<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="1sp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/primary_dark"
        android:id="@+id/pairDateLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pairDate"
            android:padding="8dp"
            android:paddingLeft="16dp"
            android:text="30.11.2015"
            android:textSize="16dp"
            android:alpha = ".5"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pairDayWeek"
            android:text="Пятница"
            android:textColor="#ffffff"
            android:alpha = ".6"
            android:layout_centerVertical="true"
            android:paddingRight="12dp"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:paddingLeft="16dp"
                    android:textSize="24dp"
                    android:id="@+id/pairNumber" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:text="08:00 09:45"
                    android:paddingLeft="8dp"
                    android:textSize="12dp"
                    android:id="@+id/pairTime" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pairContainer"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical"
                        android:layout_gravity="left"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/pairName"
                            android:layout_width="198dp"
                            android:layout_marginLeft="8dp"
                            android:layout_height="wrap_content"
                            android:text="name"
                            android:textColor="#212121"
                            android:layout_gravity="left"
                            android:layout_above="@+id/teacherLayout"
                            android:layout_alignParentTop="true"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:id="@+id/teacherLayout"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginLeft="8dp"
                                android:src="@drawable/ic_account"
                                android:id="@+id/teacherIcon" />
                            <TextView
                                android:id="@+id/pairTeacher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_gravity="bottom"
                                android:text="teacher"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/teacherIcon"
                                android:layout_toEndOf="@+id/teacherIcon" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:paddingRight="12dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:id="@+id/imageView5"
                                android:layout_gravity="right"
                                android:src="@drawable/ic_map_marker" />

                            <TextView
                                android:id="@+id/pairAuditory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top|right"
                                android:text="aud"
                                android:layout_alignParentTop="true"
                                android:layout_toRightOf="@+id/imageView5"
                                android:layout_toEndOf="@+id/imageView5"
                                android:textSize="12dp" />
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/pairType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:textSize="10dp"
                            android:text="type" />

                        <Space
                            android:layout_width="20px"
                            android:layout_height="20px" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="8dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:gravity="right"
            android:id="@+id/noteLayout">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_note"
                android:alpha = ".5"
                android:id="@+id/pairNoteImage" />
           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pairNote"
               android:text="Сделать лабораторную работу"
               android:alpha = ".5"
                android:textStyle="bold"
               android:layout_marginRight="8dp"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/pairNoteImage"
               android:layout_toEndOf="@+id/pairNoteImage" />

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>