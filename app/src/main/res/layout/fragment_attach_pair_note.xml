<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="1sp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_toRightOf="@+id/imageView2">
                <EditText
                    android:id="@+id/textNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:hint="Текст заметки"
                    android:capitalize="none"

                     />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_text"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignBottom="@+id/priority"
                android:layout_alignTop="@+id/priority"
                android:scaleType="centerInside"

                android:src="@drawable/ic_flag_outline_variant"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/priority"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image2"
                android:layout_marginLeft="32dp"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image3"
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:scaleType="centerInside"

                android:src="@drawable/ic_bell_outline"
                android:visibility="visible" />

           <CheckBox
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Напоминать мне"
               android:layout_marginLeft="32dp"
               android:layout_toRightOf="@id/image3"
               android:checked="false"
               android:id="@+id/setReminderCheckBox" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_image_filter"
                android:visibility="visible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить фотографию"
                android:layout_toRightOf="@id/image4"
                android:layout_marginLeft="32dp"
                android:background="@color/md_white_1000"
                android:id="@+id/attachPhotoBtn" />

        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>