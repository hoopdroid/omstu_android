<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="1sp"
    card_view:cardUseCompatPadding="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_toRightOf="@+id/imageView2">
                <EditText
                    android:id="@+id/textNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:hint="Текст заметки"
                    android:capitalize="none"
                    android:theme="@style/Theme.App.Base"
                    android:textColorHint="#ffffff" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_notes"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lessonName"
                android:layout_alignTop="@+id/lessonName"
                android:scaleType="centerInside"
                android:paddingLeft="16dp"
                android:src="@drawable/ic_tag"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/lessonName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image1"
                android:singleLine="true"
                 />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/priority"
                android:layout_alignTop="@+id/priority"
                android:scaleType="centerInside"
                android:paddingLeft="16dp"
                android:src="@drawable/ic_flag"
                android:visibility="visible" />

            <Spinner
                android:id="@+id/priority"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image2"
                android:singleLine="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/dateSelect"
                android:layout_alignTop="@+id/dateSelect"
                android:scaleType="centerInside"
                android:paddingLeft="16dp"
                android:src="@drawable/ic_calendar_blank"
                android:visibility="visible" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dateSelect"
                android:text="Назначить дату"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/image3"
                android:layout_toEndOf="@+id/image3" />

        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>